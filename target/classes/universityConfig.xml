<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
       <bean id="dbConnection" class="week7.university.DBConnection">
              <constructor-arg index="0" value="#{dbProperties.dbName}"/>
              <constructor-arg index="1" value="#{dbProperties.dbServer}"/>
              <constructor-arg index="2" value="#{dbProperties.user}"/>
              <constructor-arg index="3" value="#{dbProperties.password}"/>
       </bean>
       <bean id="dbProperties" class="week7.university.DBPropertyes">
              <property name="dbName" value="university"/>
              <property name="dbServer" value="jdbc:postgresql://localhost:5432/"/>
              <property name="user" value="postgres"/>
              <property name="password" value="root"/>

       </bean>


</beans>